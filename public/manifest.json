{
  "name": "Drawshot",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Draw on search results, take a screenshot and download it, as simple as that!",
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": ["contextMenus", "activeTab", "desktopCapture", "downloads"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
