{
  "name": "Snap Marker",
  "manifest_version": 3,
  "version": "0.0.1",
  "description": "Draw, capture, download, as simple as that!",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": ["contextMenus", "activeTab", "desktopCapture", "downloads"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
