{
  "name": "Snap Marker",
  "description": "Mark, capture, download!",
  "version": "0.0.3",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"]
    }
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "action": {},
  "permissions": [
    "tabs",
    "scripting",
    "contextMenus",
    "activeTab",
    "downloads"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "./static/*",
        "./static/js/content.js",
        "/static/js/content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
